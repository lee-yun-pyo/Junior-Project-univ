extends base.pug

block content
    if errorMessage 
        span=errorMessage
    div.login-entire_div 
        div.login-div
            form(method="POST", enctype="multipart/form-data").login-form
                label(for="image").upload-label 이미지 첨부
                input(type="file" id="image" name="image" accept="image/*").login-form_inputText
                input(name="title" type="text" placeholder="Title" required maxlength=50).login-form_inputText
                input(name="description" type="text" placeholder="Description" required).login-form_inputText
                input(value="SAVE" type="submit").login-form_submit