extends base.pug

block content 
    h4 Change Title
    form(method="POST", enctype="multipart/form-data")
        img(src="/"+post.imageUrl width=100 height=100)
        label(for="image") 이미지 첨부
        input(type="file" id="image" name="image" accept="image/*")
        input(name="title" placeholder="title change", value=post.title, required)
        input(name="description" type="text" value=post.description placeholder="Description" required)
        input(value="Edit" type="submit")